.head-nav {
    width: 100%;
    height: 94rpx;
    background-color: white;
    border-top: 2rpx solid #e9e8ed;
    border-bottom: 2rpx solid #e9e8ed;
    display: flex;
    flex-direction: row;
}
.head-nav > view {
    flex: 1;
    text-align: center;
    line-height: 94rpx;
}
.active-item {
    color: #D74053;
    border-bottom: 4rpx solid #D74053;
}
