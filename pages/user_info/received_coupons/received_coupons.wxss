.coupon-content {
    width: 100%;
    background-color: white;
    padding-top: 38rpx;
    overflow: hidden;
}
.coupon-content > view {
    width: 690rpx;
    height: 213rpx;
    border-radius: 15rpx;
    margin:0 auto;
    margin-bottom: 38rpx;
    overflow: hidden;
}
.green-coupon {
    color: #47C1C4;
    border: 1rpx solid  #47C1C4;
    background-color: #47C1C4;

}
.red-coupon {
    color: #F46366;
    border: 1rpx solid  #F46366;
    background-color: #F46366;

}
.coupon-time-range {
    width: 100%;
    height: 62rpx;
    overflow: hidden;
}
.coupon-time-range > text {
    color: white;
    font-size:24rpx;
    line-height:62rpx;
    display: block;
}
.coupon-time-range > text:nth-child(1) {
    float: left;
    margin-left: 25rpx;
}
.coupon-time-range > text:nth-child(2) {
    float: right;
    margin-right: 25rpx;
}
.coupon-info {
    width: 100%;
    height: 90rpx;
    background-color: white;
    padding: 30rpx 0;
    font-size: 24rpx;
}
.coupon-info > .coupon-info-left {
    width: 80rpx;
    float: left;
    line-height: 90rpx;
    margin-left: 26rpx;
}
.coupon-info-left > text {
    font-size: 45rpx;
}
.coupon-info > .coupon-info-right {
    width: 300rpx;
    float: left;
    line-height: 45rpx;
    margin-left: 90rpx;
}
.coupon-info-right > text {
    text-align: center;
    display: block;
}

