<!--index.wxml-->
<!--首页-->
<view class="wrap-content">
    <view class="header">
        <view class="logo01">
            <image src="../../images/index/logo01.png"></image>
        </view>
        <view class="motto">
            <text>多·快·好·省</text>
        </view>
        <view class="search" bindtap="goSearchPage">
            <icon class="search-static" type="search" size="16"/>
            <input placeholder="搜索京东商品"/>
        </view>
    </view>
    <view class="nav">
        <view class="nav-item1">
            <image src="../../images/index/cheap_card.png"></image>
            <navigator url="get_coupons/get_coupons">领优惠券</navigator>
        </view>
        <view class="nav-item2">
            <image src="../../images/index/scan_code.png"></image>
            <navigator>扫码购物</navigator>
        </view>
        <view class="nav-item3">
            <image src="../../images/index/logistics.png"></image>
            <navigator url="../user_info/my_order/my_order" open-type="navigate">物流查询</navigator>
        </view>
        <view class="nav-item4">
            <image src="../../images/index/class_goods.png"></image>
            <navigator url="goods_classification/goods_classification" open-type="navigate">商品分类</navigator>
            <!--<text>商品分类</text>-->
        </view>
    </view>
    <view class="section-bar"></view>
    <view class="content">
        <view class="seckill">
            <text>京东秒杀</text>
        </view>
        <view class="time" bindtap="clickNum">
            <view class="time-item">
                <text class="{{num == 1?'time-active':''}}" data-num="1">14:00</text>
                <text>抢购中</text>
            </view>
            <view class="time-item">
                <text class="{{num == 2?'time-active':''}}" data-num="2">16:00</text>
                <text>即将开始</text>
            </view>
            <view class="time-item">
                <text class="{{num == 3?'time-active':''}}" data-num="3">18:00</text>
                <text>即将开始</text>
            </view>
            <view class="time-item">
                <text class="{{num == 4?'time-active':''}}" data-num="4">20:00</text>
                <text>即将开始</text>
            </view>
            <view class="time-item">
                <text class="{{num == 5?'time-active':''}}" data-num="5">22:00</text>
                <text>即将开始</text>
            </view>
        </view>
        <view class="count_down">
            <text>距本场结束</text>
        </view>
    </view>
    <view class="goods_item" data-id="{{products_data.id}}" bindtap="goDetail">
        <view class="goods_item01">
            <image src="{{products_data.src}}"></image>
        </view>
        <view class="goods_item01_pro">
            <text>{{products_data.description}}</text>
            <text>{{products_data.product_name}}</text>
            <view class="now-price">
                <text>￥</text>{{products_data.now_price}}
                <text>￥{{products_data.old_price}}</text>
            </view>
            <view>
                <text class="percent">已售 {{products_data.sold}}</text>
                <progress percent="17" activeColor="#f35a5f" active="{{true}}"></progress>
                <view></view>
            </view>
            <view class="immediately-btn">
                <text>立即抢购</text>

            </view>
        </view>
    </view>
</view>
