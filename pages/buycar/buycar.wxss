/* pages/buycar/buycar.wxss */
.my-container{
  border-top: 1rpx solid #e8e8e8;
  background-color: #f0f2f5;
  font-family: PingFangSC-Regular,Helvetica,"Droid Sans",Arial,sans-serif;
  font-size: 28rpx;
  /*padding-bottom: 95rpx;
  height: 100%;
  width: 100%;*/
}
.goods-wrap{
  background-color: #fff;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}
.shop-title{
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.shop-img{
  width: 32rpx;
  height: 26rpx;
  position: relative;
  top: 4rpx;
}
.shop-name{
   margin-left: 14rpx;
   font-size: 28rpx;
}
.money-off{
  padding: 30rpx 20rpx 30rpx 0;
  font-size: 24rpx;
}
.money-off-icon{
  width:48rpx;
  height:24rpx;
  margin-right: 20rpx;
  position: relative;
  top: 4rpx;
}
.add-goods{
  float: right;
  color: #f23030;
}
.goods-detail{
  border-bottom: 1rpx solid #f1f1f1;
  display: -webkit-flex;  
  flex-direction: row;
  padding-right: 20rpx;
  padding-bottom: 30rpx; 
}
.choose{
  margin: auto;
}
.goods-img image{
  width: 176rpx;
  height: 176rpx;
  margin: 0 14rpx;
}
.goods-descibe{
  width: 470rpx;
  height: auto;
}
.goods-describe-txt{
  font-size: 26rpx;
  line-height: 40rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-spec{
  margin: 15rpx 0;
  color: #81838e;
  font-size: 22rpx; 
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goods-price{
  color: #f23030;
  font-size: 23rpx;
  height: 58rpx;
  line-height: 58rpx;
}
.goods-num{
  display: -webkit-flex; 
  height: 48rpx;
  line-height: 50rpx;
  border: 1rpx solid #b2b2b2; 
  border-radius: 10rpx;
  text-align: center;
  float: right;
}
.subtract{
  width: 50rpx;
  border-right: 1rpx solid #b2b2b2; 
}
.num{
  width: 68rpx;
}
.add{
  width: 50rpx;
  border-left: 1rpx solid #b2b2b2; 
}
.total-wrap{
  width: 100%;
  height: 95rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  position: fixed;
  bottom: 0;
  display: -webkit-flex;
  z-index: 100;
}
.total{
  width: 530rpx;
  padding: 0 20rpx;
  display: -webkit-flex;
}
.choose-all-wrap{
  width:80rpx;
  font-size: 24rpx;
  margin: auto;
}
.choose-all-wrap text{
  display: block;
}
.go-pay{
  width: 220rpx;
  line-height: 95rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #f23030;
  color: #fff;
}
.total-price-wrap{
  width: 450rpx;
  text-align: right;
  line-height: 1.2rem;
  margin: auto;
}
 .total-txt{
  font-size: 26rpx;
}
#total_price{
  color: #f23030;
}
.discount-price{
  color: #81838e;
  font-size: 24rpx;
}